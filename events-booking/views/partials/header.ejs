<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Event booking</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <form class="form-inline my-2 my-lg-0 ml-auto navbar-form">
        <input class="form-control search-input" type="search" placeholder="Search artist..." aria-label="Search" id="searchInput" style="overflow: hidden;">
      </form>       
      <% if(user) { %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= user.name %>
            </a>
            <div class="dropdown-menu" aria-labelledby="userDropdown">
              <% if(user.role === 1) { %>
                <a class="dropdown-item" href="/home">Manage events</a>
              <% } %>
              <a class="dropdown-item" href="/user/<%=user._id%>">My Profile</a>
              <a class="dropdown-item" href="#">My Bookings</a>
              <a class="dropdown-item" href="/user/<%=user._id%>/wallet">My Wallet</a>
              <a class="dropdown-item" href="/logout">Log out</a>
            </div>
          </li>
          <%- include('../utils/cart'); -%>
        </ul>
      <% } else { %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link btn btn-yellow-hover" href="/login">Log in</a>
          </li>
          <li class="nav-item">
            <a class="nav-link btn btn-yellow-hover" href="/signup">Sign up</a>
          </li>
        </ul>
        <% } %>
      </div>
    </nav>
  
  <script>
    $('.navbar-toggler').on('click', function() {
      $('body').toggleClass('navbar-expanded');
    });
  </script>
