<style>
  .navbar {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .navbar-form {
    display: flex;
    align-items: center;
  }

  .search-input {
    margin-right: 10px;
  }

  .navbar-collapse {
    z-index: 1000; /* Imposta un valore di z-index sufficientemente alto */
  }

  .dropdown-menu {
    z-index: 1001; /* Imposta un valore superiore per essere sicuri che il menu sia sopra la navbar */
  }

  body.navbar-expanded::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .navbar-collapse.show {
    z-index: 1000;
  }
</style>
