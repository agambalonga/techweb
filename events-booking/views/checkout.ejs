<script src="/wallet.js"></script>
<script>
    $('input[type=radio][name=paymentMethod]').change(function() {
        if (this.value == 'eb-credit') {
            $('.payment').hide();
        } else if (this.value == 'credit-card') {
            $('.payment').show();
        }
    });
</script>
