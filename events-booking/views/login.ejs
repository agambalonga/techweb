$('#email').keyup(function(){
    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const email = $(this).val();

    if(!emailPattern.test(email)){
        $('#email-feedback').html('Invalid email address');
        $(this).removeClass('is-valid');
        $(this).addClass('is-invalid');
    } else {
        $('#email-feedback').html('');
        $(this).removeClass('is-invalid');
        $(this).addClass('is-valid');
    }
});

$('#password').keyup(function(){
    $('.password.error').html('');
    $('#password').removeClass('error-input');
});

$('#login_button').click(function(e){
        e.preventDefault();
        const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        var data = {};
        data.email = $('#email').val();
        data.password = $('#password').val();
        
        $('#email').removeClass('is-invalid');
        $('#email-feedback').html('');
        $('#password').removeClass('is-invalid');
        $('#password-feedback').html('');

        var errors = false;

        if(!data.email || emailPattern.test(data.email) == false){
            $('#email-feedback').html('Invalid email address');
            $('#email').addClass('is-invalid');
            errors = true;
        }

        if(!data.password){
            $('#password').addClass('is-invalid');
            $('#password-feedback').html('Password is required');
            errors = true;
        }

        if(errors) {
            return;
        }

        $.ajax({
            type: 'POST',
            data: JSON.stringify(data),
            contentType: 'application/json',
            url: '/login',
            success: function(data) {
                window.location.href = '/';
            },
            error: function(data) {
                console.log(data)
                const errString = JSON.stringify(data.responseJSON.errors);
                const err = JSON.parse(errString);
                if(err.email){

                    $('#email-feedback').html('Invalid email address');
                    $('#email').addClass('is-invalid');
                }
                if(err.password){
                    $('#password-feedback').html(err.password);
                    $('#password').addClass('is-invalid');
                }
            }
        });
    });


</script>

