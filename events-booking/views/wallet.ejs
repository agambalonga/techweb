<script>

    $('#pay_button').click(function(){

        const name = $('#name').val();
        const cardnumber = $('#cardnumber').val();
        const expirationdate = $('#expirationdate').val();
        const securitycode = $('#securitycode').val();
        const amount = $('#amount').val();

        var error = false;

        if(name == ''){
            $('#invalid_name').text('Name is required');
            $('#name').addClass('is-invalid');
            error = true;
        } else {
            $('#invalid_name').text('');
            $('#name').removeClass('is-invalid').addClass('is-valid');
        }

        if(cardnumber == ''){
            $('#invalid_card').text('Card number is required');
            $('#cardnumber').addClass('is-invalid');
            error = true;
        } else {
            $('#invalid_card').text('');
            $('#cardnumber').removeClass('is-invalid').addClass('is-valid');
        }

        if(typeof expirationdate === 'undefined' || expirationdate == '') {
            $('#invalid_expiration_date').text('Expiration date is required');
            $('#expirationdate').addClass('is-invalid');
            error = true;
        } else {
            $('#invalid_expiration_date').text('');
            $('#expirationdate').removeClass('is-invalid').addClass('is-valid');
        }

        if(securitycode == '') {
            $('#invalid_cvc').text('CVC is required');
            $('#securitycode').addClass('is-invalid');
            error = true;
        } else {
            $('#invalid_cvc').text('');
            $('#securitycode').removeClass('is-invalid').addClass('is-valid');
        }

        if(amount == '') {
            $('#invalid_amount').text('Amount is required');
            $('#amount').addClass('is-invalid');
            error = true;
        } else {
            $('#invalid_amount').text('');
            $('#amount').removeClass('is-invalid').addClass('is-valid');
        }

        if(error) {
            return;
        }

        var data = {};
        data.amount = amount;
        data.card_number = cardnumber;

        $.ajax({
            url: '/user/<%=user._id%>/wallet',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(data) {
                console.log(JSON.parse(JSON.stringify(data)));

               // $('#wallet-info h3').html(data.curr_wallet + ' €');

               $('#successModal').modal('show').on('hidden.bs.modal', function (e) {
                   $('#transaction-table').prepend('<tr><td>' + formatDateTime(data.transaction.date) + '</td> <td>'+ data.transaction.description + '</td> <td>' + data.transaction.sign + data.transaction.amount + ' €</td></tr>');
                   $('#wallet-info h4').html('Total: '+data.curr_wallet + ' €')
            });
                //$('#wallet-transaction').html('Transaction: ' + amount + ' €');
            }
        });


    });
</script>

